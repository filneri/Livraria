@{
    ViewBag.Title = "LivrosConsulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .modal-dialog {
        left: 0;
    }
</style>

@section scripts{
<script type="text/javascript">

    $(document).ready(function () { 

        $("#tblLivros").DataTable({
            ajax: {
                url: "/api/Livro",
                dataSrc: ""
            },
            columns: [
                {
                    data: "isbn"
                },
                {
                    data: "nome"
                },
                {
                    data: "dataPublicacao"
                },
                {
                    data: "preco"
                },
                {
                    data: "autor.nome"
                },
                {
                    data: "caminho",
                      render: function (data, type, livro) {
                          return '<img class="rounded img-thumbnail" src="/Uploads/' + data + '"/>';
                    }
                },
                {
                    data: "id",
                    render: function (data, type, livro) {
                        return "<a href='/Livraria/LivrosAtualizacao/" + livro.id + "'  class='btn btn-warning'> Editar </a>" +
                            " <button data-livro-id=' " + data + " ' class='btn btn-danger js-excluir'>Excluir</button>";
                    }
                }
            ],
            "oLanguage": {
                "sEmptyTable": "Nenhum livro cadastrado.",
                "sInfo": "de _START_ até _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLengthMenu": "_MENU_ resultados por página",
                "sLoadingRecords": "Carregando...",
                "sProcessing": "Processando...",
                "sZeroRecords": "Nenhum livro encontrado",
                "sSearch": "Pesquisar",
                "oPaginate": {
                    "sNext": ">",
                    "sPrevious": "<",
                    "sFirst": "|<",
                    "sLast": ">|"
                },
                "oAria": {
                    "sSortAscending": ": Ordenar colunas de forma ascendente",
                    "sSortDescending": ": Ordenar colunas de forma descendente"
                }
            }
        });
        $("#tblLivros").on("click",".js-excluir",function () {
            var button = $(this);
            bootbox.confirm("Deseja excluir este livro ?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/api/Livro/" + button.attr("data-livro-id"),
                        method: "DELETE",
                        success: function () {
                            DataTable.row(button.parents("tr")).remove().draw();
                        }
                        
                    });
                }
            });
        });
    });
</script>
}

<h2>Listagem de livros</h2>
<br />
@Html.ActionLink("Cadastro", "LivrosCadastro", null, new { @class = "btn btn-default" })
<br />
<br />
<table id="tblLivros" class="table table-bordered table-hover">
    <thead>
        <tr style="text-align: center">
            <th>ISBN</th>
            <th>Nome</th>
            <th>Data de Publicação</th>
            <th>Preço</th>
            <th>Autor</th>
            <th>Capa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>